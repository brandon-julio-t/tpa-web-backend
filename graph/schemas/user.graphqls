type User {
    id: ID!
    accountName: String!
    country: Country!
    customUrl: String!
    displayName: String!
    email: String!
    profilePictureBase64: String!
    profileTheme: String!
    realName: String!
    summary: String!
    walletBalance: Float!
    suspendedAt: Time
    reportCounts: Int!
}

scalar Upload
scalar Time

input UpdateUser {
    displayName: String!
    realName: String!
    customUrl: String!
    summary: String!
    countryId: ID!
    avatar: Upload
    profileTheme: String!
}

extend type Query {
    getProfile(customUrl: String!): User!
    getAllUsers(page: Int!): [User!]!
}

extend type Mutation {
    register(accountName: String!, email: String!, password: String!, countryId: ID!): User!
    updateProfile(input: UpdateUser): User!
    suspendAccount(id: ID!): User!
}
